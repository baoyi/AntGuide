<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal"
	android:background="@drawable/background">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="30dp" />

	<ImageView android:id="@+id/mainpage_start"
		android:layout_width="100px" android:layout_height="50px"
		android:src="@drawable/start" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="10dp" />

	<ImageView android:id="@+id/mainpage_hiscore"
		android:layout_width="100px" android:layout_height="50px"
		android:text="@string/hiscore" android:src="@drawable/high_score" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="10dp" />


	<ImageView android:id="@+id/mainpage_about"
		android:layout_width="100px" android:layout_height="50px"
		android:text="@string/about" android:visibility="gone" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="10dp" />


	<ImageView android:id="@+id/mainpage_exit"
		android:layout_width="100px" android:layout_height="50px"
		android:src="@drawable/exit" />

</LinearLayout>
